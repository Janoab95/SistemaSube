<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0
//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost/sistemasube</property>
		<property name="connection.username">root</property>
		<property name="connection.password">Rebote Delay 3.0!</property>
		<property name="connection.pool_size">1</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">true</property>
		<!-- Mapeo de tablas-->
		<mapping resource="mapeos/Boleto.hbm.xml"/>
		<mapping resource="mapeos/Cliente.hbm.xml"/>
		<mapping resource="mapeos/Colectivo.hbm.xml"/>
		<mapping resource="mapeos/Descuento.hbm.xml"/>
		<mapping resource="mapeos/Linea.hbm.xml"/>
		<mapping resource="mapeos/RedSube.hbm.xml"/>
		<mapping resource="mapeos/Seccion.hbm.xml"/>
		<mapping resource="mapeos/Subte.hbm.xml"/>
		<mapping resource="mapeos/Tarifa.hbm.xml"/>
		<mapping resource="mapeos/Tarjeta.hbm.xml"/>
		<mapping resource="mapeos/Transporte.hbm.xml"/>
		<mapping resource="mapeos/Tren.hbm.xml"/>
		<mapping resource="mapeos/Viaje.hbm.xml"/>
		
	</session-factory>
</hibernate-configuration>