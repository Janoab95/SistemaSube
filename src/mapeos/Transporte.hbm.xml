<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="datos.Transporte" table="transporte">
		<id name="idTransporte" column="idTransporte">
			<generator class="identity"/>
		</id>
		<!--Relación herencia clase colectivo-->
		<joined-subclass name="datos.Colectivo" table="colectivo">
			<key column="idColectivo"/>
			<property column="interno" name="interno" type="int"/>
			<property column="linea" name="linea" type="int"/>
			<property column="tramo" name="tramo" type="int"/>
		</joined-subclass>
		<!--Relación herencia clase subte-->
		<joined-subclass name="datos.Subte" table="subte">
			<key column="idSubte"/>
			<property column="linea" name="linea" type="char"/>
			<property column="cantViajes" name="cantViajes" type="int"/><!--agregar atributo en la clase subte-->
		</joined-subclass>
		<!--Relación herencia clase tren-->
		<joined-subclass name="datos.Tren" table="tren">
			<key column="idTren"/>
			<property column="nombreEstacion" name="nombreTren" type="string"/>
		</joined-subclass>
		<!--Relación con la tabla red sube-->
		<set table="transporte_has_redsube" name="redsube" outer-join="true">
			<key column="idTransporte"/>
			<many-to-many column="idRedSube" class="datos.RedSube"/>
		</set>
		<!--Relación con la tabla boleto-->
		<many-to-one name="boleto" class="datos.Boleto" column="idBoleto" not-null="true"/>
		<!--Relación con la tabla tarifa-->
		<set table="tarifa_has_transporte" name="tarifas" outer-join="true">
			<key column="idTransporte"/>
			<many-to-many column="idTarifa" class="datos.Tarifa"/>
		</set>
	</class>
</hibernate-mapping>